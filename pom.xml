<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.everit</groupId>
        <artifactId>oss</artifactId>
        <version>4</version>
    </parent>
    <groupId>org.everit.osgi.dev</groupId>
    <artifactId>org.everit.osgi.dev.testrunner</artifactId>
    <version>4.0.0-alpha1</version>
    <packaging>bundle</packaging>
    <name>Test Runner Bundle</name>
    <description>An OSGi Bundle that picks up any OSGi Service that matches the (osgitest=junit4) filter and runs them inside the container.</description>
    <scm>
        <connection>scm:git:git://github.com/everit-org/osgi-testrunner.git</connection>
        <developerConnection>scm:git:https://github.com/everit-org/osgi-testrunner.git</developerConnection>
        <url>https://github.com/everit-org/osgi-testrunner</url>
    </scm>
    <url>${everit.public.site.url}/mvnsites/osgi-testrunner</url>
    <distributionManagement>
        <site>
            <id>everit.org</id>
            <url>dav:${everit.public.site.url}/mvnsites/osgi-testrunner</url>
        </site>
    </distributionManagement>
    <ciManagement>
        <system>Jenkins</system>
        <url>https://ci.everit.biz/jenkins/job/osgi-testrunner</url>
    </ciManagement>
    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/everit-org/osgi-testrunner/issues</url>
    </issueManagement>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Activator>org.everit.osgi.dev.testrunner.internal.TestRunnerActivator</Bundle-Activator>
                        <Import-Package>org.osgi.service.blueprint.*;resolution:=optional,*</Import-Package>
                        <Export-Package>
                            org.everit.osgi.dev.testrunner,
                            org.everit.osgi.dev.testrunner.blocking,
                            org.everit.osgi.dev.testrunner.engine
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.junit</groupId>
            <artifactId>com.springsource.org.junit</artifactId>
            <version>4.11.0</version>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>4.3.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.everit.osgi.bundles</groupId>
            <artifactId>org.everit.osgi.bundles.org.apache.xmlcommons.full</artifactId>
            <version>1.4.1</version>
        </dependency>
        <dependency>
            <groupId>org.everit.osgi.bundles</groupId>
            <artifactId>org.everit.osgi.bundles.org.osgi.util.tracker</artifactId>
            <version>1.5.0</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    <repositories>
        <repository>
            <id>everit.groups.public</id>
            <name>Everit Public Repository Group</name>
            <url>http://repository.everit.biz/nexus/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>everit.groups.proxy</id>
            <name>Everit Proxy Repository Group</name>
            <url>http://repository.everit.biz/nexus/content/groups/proxy</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
</project>
